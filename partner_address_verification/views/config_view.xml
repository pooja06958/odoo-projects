<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="30"/>
            <field name="inherit_id" ref="website.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='website_selection_settings']" position="after">
                  <div class="address_validation_settings_block" data-string="Address Validation" string="Address Validation" data-key="address_validation">
                    <h2 class="mt32">Address Validation</h2>
                    <div class="row mt16 o_settings_container" id="address_validationsetting_container">
                      <div class="col-12 col-lg-6 o_setting_box" id="address_validation_connector">
                        <div class="o_setting_right_pane">
                          <div class="mt16">
                            <label for="auth_id"/>
                            <field name="auth_id" class="oe_inline"/>
                          </div>
                          <div class="mt8">
                            <label for="auth_token"/>
                            <field name="auth_token" class="oe_inline"/>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
